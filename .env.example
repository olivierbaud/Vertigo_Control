# Environment: development or production
NODE_ENV=development

# Server port
PORT=3000

# JWT secret for authentication (change in production!)
JWT_SECRET=your-secret-key-change-in-production

# PostgreSQL database URL (Railway provides this automatically)
DATABASE_URL=postgresql://user:password@host:port/database

# AI Provider API Keys (Platform Keys - for included credits)
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
GEMINI_API_KEY=...

# BYOK Encryption Key (64-character hex string, generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=486249aeaa2fc5a8113128df236ce69776edd5c8ab325f759adcbea4584a9bbf

# Cloudflare R2 Image Storage
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=vertigo-control-images
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_PUBLIC_URL=https://your-bucket.r2.dev
